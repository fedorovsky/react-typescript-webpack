{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
//  "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["dom", "es5", "es6", "es7", "es2017"],
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/**/*"],
  "exclude": ["dist", "node_modules"]
}
